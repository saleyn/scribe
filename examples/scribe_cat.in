'''scribe_cat: A simple script for sending messages to scribe.'''

import sys
import os
from scribe import scribe
from thrift.transport import TTransport, TSocket
from thrift.protocol import TBinaryProtocol

unix_socket = None
host = None
port = 1463

if len(sys.argv) == 2:
  category = sys.argv[1]
  host = '127.0.0.1'
elif len(sys.argv) == 4 and sys.argv[1] == '-h':
  category = sys.argv[3]
  if os.path.isabs(sys.argv[2]):
    unix_socket = sys.argv[2]
  else:
    host_port = sys.argv[2].split(':')
    host = host_port[0]
    port =int(host_port[1]) if len(host_port) > 1 else 1463
else:
  sys.exit('usage (message is stdin): scribe_cat [-h host_or_file[:port]] category')

log_entry = scribe.LogEntry(category=category, message=sys.stdin.read())

socket = TSocket.TSocket(host=host, port=port, unix_socket=unix_socket)
transport = TTransport.TFramedTransport(socket)
protocol = TBinaryProtocol.TBinaryProtocol(trans=transport, strictRead=False, strictWrite=False)
client = scribe.Client(iprot=protocol, oprot=protocol)

transport.open()
result = client.Log(messages=[log_entry])
transport.close()

if result == scribe.ResultCode.OK:
  sys.exit()
elif result == scribe.ResultCode.TRY_LATER:
  print >> sys.stderr, "TRY_LATER"
  sys.exit(84)  # 'T'
else:
  sys.exit("Unknown error code.")
